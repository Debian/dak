set -e
set -u

. "$(dirname "${BASH_SOURCE}")/runner-lib"

TESTS="$@"

if [ -z "$TESTS" ]
then
	TESTS="${DAK_ROOT}/integration-tests/tests/[0-9]*[^~] \
		${DAK_ROOT}/tests/run-dbtests"
fi

for t in $TESTS; do
  echo "=== Running ${t##*/}"
  set +e
  run-script-with-pg "${t}"
  res=$?
  set -e
  if [ $res != 0 ]
  then
	  echo test $t failed
	  exit 1
  fi
done
