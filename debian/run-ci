if [ "x$1" = "x--with-coverage" ]; then
    RUN_COVERAGE=y
else
	RUN_COVERAGE=
fi

export RUN_COVERAGE

set -eu

if [ ! -f dak/dak.py ]; then
  echo >&2 "E: run-ci must be invoked in the root directory of dak"
  exit 1
fi

apt-get update
apt-get install -y build-essential
apt-get build-dep -y .
dpkg-buildpackage -b
